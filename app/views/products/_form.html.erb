<%= form_with model:@product do |form| %>
    
  <% if @product.errors.any? %>
      <% @product.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
  <% end %>

  <div class="mb-4">
      <%= form.text_field :name, class:"appearance-none block w-full py-3 px-4  text-gray-700 bg-gry-50 focus:bg-white border border-gray-200 focus:border-gray-500 rounded focus:outline-none", placeholder:'Title' %>
  </div>
  <div class="mb-4">
      <%= form.text_area :description, rows:10, class:"appearance-none block w-full py-3 px-4  text-gray-700 bg-gry-50 focus:bg-white border border-gray-200 focus:border-gray-500 rounded focus:outline-none", placeholder:"Description" %>
  </div>
  <div class="mb-4">
      <%= form.file_field :image  %>
  </div>
  <div class="mb-4">
      <%= form.text_field :url, class:"appearance-none block w-full py-3 px-4  text-gray-700 bg-gry-50 focus:bg-white border border-gray-200 focus:border-gray-500 rounded focus:outline-none", placeholder:'URL project' %>
  </div>
  <hr>

  <div class="mb-4">
      <%= form.submit 'Guardar cambios', class:"cursor-pointer inline-block  py-4 px-8 leading-none text-white bg-red-600 hover:bg-red-700 font-semibold rounded shadow" %>
  </div>
<% end %>
